    <div id="delete-button" > 
        <form id="delete-button-text" action="/meal/<%= item.id %>?_method=DELETE" method="POST" >
        <input type="submit" value="DELETE ENTRY" />
      </form>
    </div>
 <div id="edit-div">
    <a href="/meal/<%= item.id %>/edit" class="edit-text">EDIT ENTRY</a>
 </div>
  
</div>
  <% }) %>
</div>
