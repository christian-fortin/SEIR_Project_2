

 
    <% items.forEach( (item, index) =>{ %>
    <div class="itemContainer">

   
        <h1>
            <a href="/chunks/<%= item.id %>">
                <p>Name: <%= item.name %></p> 
                <p>Description: <%= item.description %></p> 
                <p>Img: <%= item.img %></p> 
                <p>Price: <%= item.price %></p> 
                <p>Quantity: <%= item.qty %></p> 
            </a>
        </h1>
        <form action='/chunks/<%= item.id %>?_method=DELETE' method="POST">
            <input type="submit" value="DELETE" />
        </form>
        <a href="/chunks/<%= item.id %>/edit">Edit Me</a>
        <a href="/chunks"></a>
        <%  }) %>
    </div>


