

<div id="edit-item-title">
  <h1>Edit Item</h1>
</div>


  <form action="/meal/<%= item.id %>?_method=PUT" method="POST" class="form-edit_container">
    <label for="dish" class="editLabel">Dish:</label>
<div id="edit-title-div">
    
    <textarea type="text" name="dish" id="dish" value="<%=item.dish%>"></textarea>
</div>



<label for="ingredients" class="editLabel">Ingredients:</label>
<div id="edit-ingredients-div">
 
    <textarea type="text" name="ingredients" id="ingredients" value="<%=item.ingredients%>"></textarea>
</div>

<label for="recepie" class="editLabel">Recepie:</label>
<div id="edit-recepie-div">
   
    <textarea type="text" name="recepie" id="recepie" value="<%=item.recepie%>"></textarea>
  </div>


  <label for="image" class="editLabel">Image:</label>
<div id="edit-images-div">  
    <!-- <textarea type="text" name="image" id="image"value="<%=item.image%>"></textarea> -->

    <form action="/" method="POST" enctype="multipart/form-data">

      <div class="form-group">
          <label for="Select Image:">Select Image:</label>
          <input type="file" name="image" class="form-control" id="">
      </div>
      <br>
      <div class="form-group">
          <button class="btn btn-block btn-danger">
              Upload Image
          </button>
      </div>
  </form>

</div>

    <input type="submit" value="Submit the Edit" />
  </form>
